        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/not_like"
        app:layout_constraintRight_creator="0"
        app:layout_constraintRight_toRightOf="@+id/root_view"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toTopOf="@+id/root_view"
        app:layout_editor_absoluteX="332dp"
        app:layout_editor_absoluteY="0dp" />

